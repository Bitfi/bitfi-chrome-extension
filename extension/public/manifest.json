{
  "manifest_version": 2,
  "name": "bitfi_extension",
  "version": "0.1",
  "description": "Some Description",

  "permissions": ["storage", "tabs"],
  "externally_connectable": {
    "matches": ["<all_urls>", "*://*.example.com/*"]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "128": "bitfi.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "bitfi.png"
    },
    "default_title": "BITFI extension",
    "default_popup": "index.html"
  }
}
